fn testWhile() {
    var idx i32 := 0

    while idx < 10 {
        printInt(idx)
        idx = idx + 1
    }

    printStr("------------")

    while false {
        printStr("dead code")
    }

    printStr("------------")

    idx = 0
    while true {
        printStr("endless loop")

        if idx >= 30 {
            printStr("aborted endless loop")
            exit(0)       // TODO break
        }
        idx = idx + 1
    }
}

fn testFor() {
    // TODO: more readable
    for var i i32 := 0 i < 4 i = i + 1 {
        printInt(i)
    }

    printStr("------------")

    for var i i32 := 0 i != 0 i = i {
        printStr("dead code")
    }

    printStr("------------")

    for var i i32 := -4 i <= 86 i = i + 6 {
        printInt(i)
    }
}

fn main() {
    printStr("for tests")
    testFor()
    printStr("while tests")
    testWhile()
}
