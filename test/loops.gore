fn testWhile() {
    var idx i32 := 0

    while idx < 10 {
        printInt(idx)
        idx = idx + 1
    }

    printStr("------------")

    while false {
        printStr("dead code")
    }

    printStr("------------")

    idx = 0
    while true {
        printStr("endless while loop")

        if idx >= 30 {
            printStr("aborted endless loop")
            exit(0)       // TODO break
        }
        idx = idx + 1
    }
}

fn testFor() {
    // for (int i = 0; i < 4; i++)
    for i i32, 4 {
        printInt(i)
    }

    printStr("------------")

    // for (int i = 4; i < 4; i++)
    for i i32, 4, 4 {
        printStr("dead code")
    }

    printStr("------------")

    // for (int i = -4; i < 87; i+=6)
    for i i32, 87, -4, i+6 {
        printInt(i)
    }

    printStr("------------")
    printStr("endless for loop")

