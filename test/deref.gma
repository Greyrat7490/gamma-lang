v1 i32 := -86
v2 i32 := 420
p1 *i32 := &v1

fn test_deref_global() {
    print("*p1 = ")
    print(itos(*p1))
    print(" (expected: -86 (v1))\n")

    print("v1 = 86 \n*p1 = ")
    v1 = 86
    print(itos(*p1))
    print(" (expected: 86 (v1))\n")

    print("*p1 = 2 * *p1 \n*p1 = ")
              *p1 = 2 * *p1
    print(itos(*p1))
    print(" (expected: 172 (2 * 86))\n")

    print("*p1 = *p1 / 2 \n*p1 = ")
              *p1 = *p1 / 2
    print(itos(*p1))
    print(" (expected: 86 (172 / 2))\n")

    print("*p1 = 2 * *p1 + 10 * 2 \n*p1 = ")
              *p1 = 2 * *p1 + 10 * 2
    print(itos(*p1))
    print(" (expected: 192 (2 * 86 + 10 * 2))\n")
}

fn test_deref_local() {
    p2 *i32 := &v2

    print("*p2 = ")
    print(itos(*p2))
    print(" (expected: 420 (v2))\n")

    print("v2 = 86 \n*p2 = ")
    v2 = 86
    print(itos(*p2))
    print(" (expected: 86 (v2))\n")

    print("*p2 = 2 * *p2 \n*p2 = ")
              *p2 = 2 * *p2
    print(itos(*p2))
    print(" (expected: 172 (2 * 86))\n")

    print("*p2 = *p2 / 2 \n*p2 = ")
              *p2 = *p2 / 2
    print(itos(*p2))
    print(" (expected: 86 (172 / 2))\n")

    print("*p2 = 2 * *p2 + 10 * 2 \n*p2 = ")
              *p2 = 2 * *p2 + 10 * 2
    print(itos(*p2))
    print(" (expected: 192 (2 * 86 + 10 * 2))\n")
}

fn test_deref_deref() {
    var := 64
    ptr := &var
    ptr2 := &ptr

    print(itos(var)) print(ctos('\n'))
    print(itos(*ptr)) print(ctos('\n'))
    print(itos(**ptr2)) print(ctos('\n'))

    **ptr2 = -69

    print(itos(var)) print(ctos('\n'))
    print(itos(*ptr)) print(ctos('\n'))
    print(itos(**ptr2)) print(ctos('\n'))
}

fn main() {
    print("global pointer\n")
    test_deref_global()

    print("\nlocal pointer\n")
    test_deref_local()

    print("\ntest **var\n")
    test_deref_deref()
}
