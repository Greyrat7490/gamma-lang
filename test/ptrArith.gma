v1 i32 := 0
pGlobal *i32 := &v1

fn main() {
    local i32 := 0
    pLocal *i32 := &local

    diff u64 := pLocal - pGlobal

    printPtr(pGlobal)
    printStr("\n")
    printPtr(pLocal)
    printStr("\n")

    printStr("diff in bytes: ")
    printUint(diff)
    printStr("   ~1MB difference (size of stack - 8)\n")
    // 1 more global var after v1 -> +8
    // 1 push (push rbp)          -> -8
    // 1 call (call main -> push) -> -8

    printStr("stack size:\n")

    diff = pLocal - pGlobal + 8

    printStr("in bytes: ")
    printUint(diff)
    printStr("\nin MB: ")
    printUint(diff / 1024 / 1024)
    printStr("\n")
}
