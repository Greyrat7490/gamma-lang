fn main() {
    i:=1
    i2:=8
    i3:=11

    print("i<<2 = ")
    print(itos(i<<2))
    print(" (1<<2) expected: 4\n")

    print("i2 >> 3 = ")
    print(itos(i2 >> 3))
    print(" (8 >> 3) expected: 1\n")

    print("i3&3 = ")
    print(itos(i3&3))
    print(" (11&3) expected: 3\n")

    print("i3 | 4 = ")
    print(itos(i3 | 4))
    print(" (11 | 4) expected: 15\n")

    print("i3 ^ i3 = ")
    print(itos(i3 ^ i3))
    print(" (11 ^ 11) expected: 0\n")

    print("~i = ")
    print(itos(~i))
    print(" (~1) expected: -2\n")
}
