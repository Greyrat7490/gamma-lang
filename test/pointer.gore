var v1 i32 := -86
var v2 i32 := 420
var p1 *i32 := &v1

fn global_test() {
    printStr("p1 = &v1")

    printInt(v1)
    *p1 = -69
    printInt(v1)
    *p1 = v2
    printInt(v1)

    printStr("p1 = &v2")
    p1 = &v2

    printInt(v2)
    *p1 = -13
    printInt(v2)
    *p1 = v1
    printInt(v2)

    p1 = &v1
}

fn local_test() {
    var i1 i32 := 86
    var i2 i32 := -69

    printStr("lp1 = &i1")
    var lp1 *i32 := &i1

    printInt(i1)
    *lp1 = 420
    printInt(i1)
    *lp1 = i2
    printInt(i1)

    printStr("lp1 = &i2")
    lp1 = &i2

    printInt(i2)
    *lp1 = -420
    printInt(i2)
    *lp1 = i1
    printInt(i2)
}


fn main() {
    printStr("global pointer ----------")
    global_test()

    printStr("local pointer ----------")
    local_test()
}
