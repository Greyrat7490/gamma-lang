var v1 i32 := -86
var v2 i32 := 420
var p1 *i32 := &v1

fn global_test() {
    printStr("v1: ")
    printInt(v1)
    printStr("\n")

    printStr("v2: ")
    printInt(v2)
    printStr("\n")
 

    printStr("p1 = &v1\n")

    printInt(v1)
    printStr("\n")

    printStr("*p1 = -69\n")
    *p1 = -69

    printInt(v1)
    printStr("\n")
    
    printStr("*p1 = v2\n")
    *p1 = v2

    printInt(v1)
    printStr("\n")


    printStr("\np1 = &v2\n")
    p1 = &v2

    printInt(v2)
    printStr("\n")
    
    printStr("*p1 = -13\n")
    *p1 = -13
    
    printInt(v2)
    printStr("\n")
    
    printStr("*p1 = v1\n")
    *p1 = v1
    
    printInt(v2)
    printStr("\n")

    printStr("p1 = &v1\n")
    p1 = &v1
    printStr("\n")
}

fn local_test() {
    var i1 i32 := 86
    var i2 i32 := -69

    printStr("i1: ")
    printInt(i1)
    printStr("\n")

    printStr("i2: ")
    printInt(i2)
    printStr("\n")


    printStr("lp1 = &i1\n")
    var lp1 *i32 := &i1

    printInt(i1)
    printStr("\n")

    printStr("*lp1 = 420\n")
    *lp1 = 420

    printInt(i1)
    printStr("\n")

    printStr("*lp1 = i2\n")
    *lp1 = i2

    printInt(i1)
    printStr("\n")

    printStr("\nlp1 = &i2\n")
    lp1 = &i2

    printInt(i2)
    printStr("\n")

    printStr("*lp1 = -420\n")
    *lp1 = -420

    printInt(i2)
    printStr("\n")

    printStr("*lp1 = i1\n")
    *lp1 = i1

    printInt(i2)
    printStr("\n")
}


fn main() {
    printStr("global pointer ----------\n")
    global_test()

    printStr("local pointer ----------\n")
    local_test()
}
