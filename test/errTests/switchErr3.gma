/*
multiple cases in one line should be separated with a ";"
* more readable
* prevents:
     if a1 == {
         86: print("86\n"): print("-86\n")    // missing ";"
                             |
                             +--- accidentally no expr before ":" / accidentally put ":" there
                                    -> compiler thinks print is the cond
         _: print("default\n")
     }
*/

fn switch(a1 i32) {
    if a1 == {
        86: print("86\n") -86: print("-86\n")    // missing ";"
        _: print("default\n")
    }
}

fn main() {
    switch(69)
}
